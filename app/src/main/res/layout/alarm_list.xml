<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/alarmlist_cView"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/cardview_light_background"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp">

            <LinearLayout
                android:id="@+id/alarmlist_lLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/alarmlist_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--:--"
                        android:textColor="@color/colorTeal_800"
                        android:textSize="28sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/alarmlist_sun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sun"
                        android:textColor="@color/colorTeal_800"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/alarmlist_mon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="Mon"
                        android:textColor="@color/colorTeal_800"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/alarmlist_tue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="Tue"
                        android:textColor="@color/colorTeal_800"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/alarmlist_wed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="Wed"
                        android:textColor="@color/colorTeal_800"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/alarmlist_thu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="Thu"
                        android:textColor="@color/colorTeal_800"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/alarmlist_fri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="Fri"
                        android:textColor="@color/colorTeal_800"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/alarmlist_sat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="Sat"
                        android:textColor="@color/colorTeal_800"
                        android:textSize="12dp" />
                </LinearLayout>

            </LinearLayout>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/alarmlist_switch"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignBottom="@+id/alarmlist_lLayout"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>